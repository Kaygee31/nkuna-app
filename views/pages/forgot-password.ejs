<%- include("../partials/util.ejs") %>
<%- include("../partials/navigation.ejs") %>

<div class="container" style="margin-top: 100px;">
  <div class="row">
    <div class="col-lg-6 col-md-8 col-sm-12" style="margin: 80px auto; padding-top: 10px;
    padding-bottom: 10px;">
      <% if(typeof success !== "undefined") { %>
        <div class="alert alert-success forgot-pass-alert" role="alert">
          <%= success %>
        </div>
      <% } %>
      <form method="post" action="/user/forgot-password">
        <div class="mb-3">
          <label for="email" class="form-label">Email address</label>
          <input type="email" name="email" class="form-control" id="email" placeholder="name@example.com" style="border: 1px solid #FE8F1C;">
        </div>
        <button type="submit" class="btn btn-primary btn-reset">Reset Password</button>
      </form>
    </div>
  </div>
</div>



