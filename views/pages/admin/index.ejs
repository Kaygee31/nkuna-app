<%- include("../../partials/util.ejs") %>

<div class="main-body">
<%- include("../../partials/nav_admin.ejs") %>

<div class="container">
  <div class="col-lg-10 col-md-12 ">
      <% if(typeof messages !== "undefined" && messages.length !== 0) { %>
        <h2>Messages</h2>
        <table class="table table-dark table-striped">
          <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Surname</th>
              <th scope="col">Email</th>
              <th scope="col">Contact</th>
              <th scope="col">Inquery</th>
              <th scope="col">Message</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
              <% messages.forEach((message) => { %>
              <tr>
                <td><%= message.name %></td>
                <td><%= message.surname %></td>
                <td><%= message.email %></td>
                <td><%= message.contact %></td>
                <td><%= message.inquery %></td>
                <td><%= message.message %></td>
                <td class="messageId" style="display: none;"><%= message._id %></td>
                <td><i class="bi bi-trash delete_message" style="font-size: 30px; color:red; cursor: pointer;"></a></td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <h1>No Messages Available</h1>
      <% } %>
  </div>

</div>
<%- include("../../partials/footer.ejs") %>
</div>
