<%- include("../../../partials/util.ejs") %>

<div class="main-body">
  <%- include("../../../partials/nav_admin.ejs") %>

  <div class="container">
    <div class="col-lg-10 col-md-12 ">
        <% if(typeof warning !== 'undefined') { %>
          <h1 style="position: absolute; top: 50%; left:50%; transform:translate(-50%,-50%);"> <%= warning %> </h1>
        <% } else if(typeof volunteers !== 'undefined' && volunteers.length !== 0) { %>
          <a href="/admin/volunteers/add" class="btn">Add Volunteer</a>
          <h1>All Volunteers</h1>
          <table class="table table-dark table-striped">
            <thead>
              <tr>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Contact</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>

              </tr>
            </thead>
            <tbody>
                <% volunteers.forEach((volunteer) => { %>
                <tr>
                  <td><%= volunteer.name %></td>
                  <td><%= volunteer.email %></td>
                  <td><%= volunteer.contact %></td>
                  <td class="volunteer_id" style="display: none;"><%= volunteer._id %></td>
                  <td><a href="/admin/volunteers/edit/<%=volunteer._id %>"><i class="bi bi-pencil-square" style="font-size: 30px; color: green"></i></a></td>
                  <td><i class="bi bi-trash delete_volunteer" style="font-size: 30px; color:red; cursor: pointer;"></i></td>
                </tr>
                <% }) %>
            </tbody>
          </table>
        <%} else { %>
          <h1>No Volunteers Available</h1>
          <a href="/admin/volunteers/add" class="btn btn-primary">Add New Volunteer</a>
        <% } %>
    </div>
  </div>

  <%- include("../../../partials/footer.ejs") %>
</div>


