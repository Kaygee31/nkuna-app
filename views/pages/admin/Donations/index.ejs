<%- include("../../../partials/util.ejs") %>

<div class="main-body">
<%- include("../../../partials/nav_admin.ejs") %>

<div class="container">

  <div class="col-lg-10 col-md-12 ">
      <% if(typeof donations !== 'undefined' && donations.length !== 0) { %>
        <a href="/admin/donations/add" class="btn">Add Donation</a>
        <h1>All Donations</h1>
        <table class="table table-dark table-striped">
          <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Email</th>
              <th scope="col">Date</th>
              <th scope="col">Contact</th>
              <th scope="col">Amount</th>
            </tr>
          </thead>
          <tbody>
              <% donations.forEach((donation) => { %>
              <tr>
                <td><%= donation.donorName %></td>
                <td><%= donation.email %></td>
                <td><%= donation.date %></td>
                <td><%= donation.contact %></td>
                <td>R<%= donation.amount %></td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <h1>No Donations Available</h1>
        <a href="/admin/donations/add" class="btn btn-primary">Add New Donations</a>
      <% } %>
  </div>
</div>

<%- include("../../../partials/footer.ejs") %>
</div>



