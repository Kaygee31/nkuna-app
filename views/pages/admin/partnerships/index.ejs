<%- include("../../../partials/util.ejs") %>

<div class="main-body">
<%- include("../../../partials/nav_admin.ejs") %>

<div class="container">
  <a href="/admin/partnership/add" class="btn">Add Partnership</a>
  <div class="col-lg-10 col-md-12 ">

      <% if(typeof partners !== 'undefined' && partners.length !== 0) { %>
        <h1>All Partnerships</h1>
        <table class="table table-dark table-striped">
          <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Email</th>
              <th scope="col">Contact</th>
              <th scope="col">Project Name</th>
              <th scope="col">Edit</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
              <% partners.forEach((partner) => { %>
              <tr>
                <td><%= partner.name %></td>
                <td><%= partner.email %></td>
                <td><%= partner.contact %></td>
                <td><%= partner.projectName %></td>
                <td><a href="/admin/partnership/edit/<%=partner._id %>"><i class="bi bi-pencil-square" style="font-size: 30px; color:red"></i></a></td>
                <td><a href="/admin/partnership/delete/<%=partner._id %>?_method=DELETE"><i class="bi bi-trash" style="font-size: 30px; color: green"></i></a></td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <h1>No Partnerships Available</h1>
        <a href="/admin/partnership/add" class="btn btn-primary">Add New Partner</a>
      <% } %>
  </div>
</div>

<%- include("../../../partials/footer.ejs") %>
</div>



