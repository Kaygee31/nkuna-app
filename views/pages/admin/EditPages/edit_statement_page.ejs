<div class="statement_container">
  <div class="container-fluid">
    <div class="row">
      <div class="form_container col-lg-8 col-md-10 col-sm-10" style="margin: 0 auto;">
        <form id="statement_form" novalidate>
          <div class="errors">

          </div>

          <input type="text" class="statement_id" hidden value="<%=statement.id%>" />
          <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input
              type="text"
              value="<%= statement.name %>"
              class="form-control form-control-lg"
              name="name"
              id="name"
              minlength="3"
              maxlength="20"
              required
          />
          </div>

          <div class="mb-3">
            <label for="body"  class="form-label">Body</label>
            <textarea
              class="form-control form-control-lg"
              rows="5"
              name="body"
              id="body"
              class="form-control"
              required
              minlength="3"
              maxlength="300"
            ><%= statement.body%></textarea>
          </div>

          <div class="form_buttons">
            <button type="submit" class="btn btn_state_submit btn-primary">Submit</button>
            <button type="button" class="btn btn_cancel btn-secondary">Cancel</button>
          </div>
        </form>
      </div>
    </div>
  </div>

</div>
