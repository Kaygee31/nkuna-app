
<div class="banking_selector">
  <div class="container-fluid">
    <div class="row">
      <div class="form_container col-lg-8 col-md-10 col-sm-10" style="margin: 0 auto;">
        <form class="banking_form" novalidate>
          <div class="errors">

          </div>
          <div class="mb-3">
            <label for="name" class="form-label">Group Name</label>
            <input
              type="text"
              value="<%= bankingDetails.accountName %>"
              class="form-control form-control-lg"
              id="name"
              name="name"
              minlength="3"
              maxlength="20"
              required
            />
          </div>

          <div class="mb-3">
            <label for="account_number" class="form-label">Account Number</label>
            <input
              type="number"
              value="<%= bankingDetails.accountNumber %>"
              class="form-control form-control-lg"
              id="account_number"
              name="account_number"
              minlength="9"
              maxlength="15"
              required
            />
          </div>

          <div class="mb-3">
            <label for="bank_name" class="form-label">Bank Name</label>
            <input
              type="text"
              value="<%= bankingDetails.bankName %>"
              class="form-control form-control-lg"
              id="bank_name"
              name="bank_name"
              minlength="3"
              maxlength="20"
              required
            />
          </div>

          <div class="mb-3">
            <label for="reference" class="form-label">Reference</label>
            <input
              type="text"
              value="<%= bankingDetails.reference %>"
              class="form-control form-control-lg"
              id="reference"
              name="reference"
              minlength="3"
              maxlength="20"
              required
            />
          </div>

          <div class="form_buttons">
            <button type="submit" class="btn btn_banking_submit btn-primary">Submit</button>
            <button type="button" class="btn btn_cancel btn-secondary">Cancel</button>
          </div>
        </form>
      </div>
    </div>
  </div>

</div>

