<%- include('../../../partials/util.ejs') %>
<div class="main-body">
  <%- include('../../../partials/nav_admin.ejs') %>
  <div class="container-fluid">
    <div class="row">
      <div class="main_edit dumelang">
        <a href="#" class="btn btn_edit btn-light btn_edit_statement">Statements</a>
        <a href="#" class="btn btn_edit btn-light btn_edit_banking">Banking Details</a>
        <a href="#" class="btn btn_edit btn-light btn_edit_team active" style="color: white;">The Team</a>
        <a href="#" class="btn btn_edit btn-light btn_edit_contact">Contact</a>
        <a class="btn btn_overview" href="/admin/pages/edit/overview" style="color: orange;">Back to Overview</a>
      </div>

      <div class="statement_edit" style="display: none;">
        <% if(typeof statements !== "undefined") { %>
          <select class="form-select form-select-md mb-3" id="statement_toggle">
            <option value="0">Select Statement to Edit</option>
              <% statements.forEach((statement) => { %>
                <option value= <%=statement.id %> > <%=statement.name%> </option>
              <% }) %>

          </select>
        <% } %>
      </div>

      <div class="team_edit" >
        <div>
          <% if(typeof the_team !== "undefined") { %>
          <select class="form-select" id="team_toggle">
            <option value="0">Select Team Member</option>

              <% the_team.forEach((team) => { %>
                <option value= <%=team.id %> > <%=team.name%> </option>
              <% }) %>

          </select>
        </div>
        <% } %>

      </div>
    </div>
  </div>


  <div id="loadContainer">

  </div>
</div>

<script type="text/javascript" src="/scripts/edit_script.js" ></script>
